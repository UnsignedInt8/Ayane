<UserControl
    x:Class="Ayane.Widgets.LoopModeButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Ayane.Widgets"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <ToggleButton x:Name="RepeatOneButton" Visibility="Collapsed" Click="RepeatOneButton_OnClick" Unchecked="RepeatOneButton_OnUnchecked">
            <SymbolIcon Symbol="RepeatOne" />
        </ToggleButton>

        <ToggleButton x:Name="RepeatAllButton" Click="RepeatAllButton_OnClick" Unchecked="RepeatAllButton_OnUnchecked">
            <SymbolIcon Symbol="RepeatAll"/>
        </ToggleButton>
    </Grid>
</UserControl>
