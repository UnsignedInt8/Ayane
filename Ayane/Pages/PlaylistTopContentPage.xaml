                <widgets:ActiveSongIndicator Width="4" HorizontalAlignment="Left" Margin="-16, 2, 0, 0" Grid.RowSpan="2" CurrentSong="{x:Bind Mode=OneWay}" TargetSong="{Binding Source={StaticResource ViewModelLocator}, Path=PlayerViewModel.ActiveSong}"/>
                <TextBlock Text="{x:Bind Title, Mode=OneWay}" IsColorFontEnabled="False" Grid.Row="0" Grid.Column="0" Foreground="{StaticResource AccentBrush}" FontFamily="Segoe UI" FontSize="16" FontWeight="Normal" Opacity="1" Margin="0, 0, 0, 1" TextTrimming="CharacterEllipsis"/>
                <TextBlock Text="{x:Bind ArtistName, Mode=OneWay}" IsColorFontEnabled="False" Grid.Row="1" Grid.Column="0" Margin="0, 0, 8, 0" Style="{StaticResource SubtleTextBlockStyle}" TextTrimming="CharacterEllipsis" FontSize="13"/>
                <TextBlock Text="{x:Bind Duration, Mode=OneWay, Converter={StaticResource TimeSpanToStringConverter}}" Grid.Row="1" Grid.Column="1" TextAlignment="Right" Style="{StaticResource SubtleTextBlockStyle}" FontSize="13"/>
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Pivot x:Name="Skeleton" Visibility="{x:Bind ViewModel, Converter={StaticResource NullToCollapsedConverter}, Mode=OneWay}" SelectionChanged="Pivot_OnSelectionChanged">
        <PivotItem x:Uid="TopContentPage_SongsPivotItem" Header="Songs" Background="Transparent">
            <Grid>
                <StackPanel VerticalAlignment="Center" Visibility="{x:Bind ViewModel.HasSongs, Converter={StaticResource ReverseBooleanToVisibilityConverter}, Mode=OneWay}" >
                    <Path Fill="{StaticResource LightSubtleBrush}" Width="120" Opacity=".5" Data="M416 32h-320l-96 96v336c0 8.837 7.163 16 16 16h480c8.836 0 16-7.163 16-16v-336l-96-96zM256 416l-160-128h96v-96h128v96h96l-160 128zM77.255 96l32-32h293.489l32 32h-357.489z" />
                    <TextBlock x:Uid="CreatePlaylistPage_DragFolderHereTipTextBlock" Foreground="Gray" HorizontalAlignment="Center" Text="Please drop your media folders here" Margin="0, 6"/>
                    <TextBlock x:Uid="TopContentPage_SongsListViewTip_DropFolders" Foreground="Gray" HorizontalAlignment="Center" Text="Note: Dropping files here is not appropriate. Folders are recommended." FontSize="10" />
                </StackPanel>
                <SemanticZoom x:Name="SongsSemanticZoom" AllowDrop="True" DragOver="{x:Bind ViewModel.OnDragOver, Mode=OneWay}" Drop="{x:Bind ViewModel.OnDrop}">
                    <SemanticZoom.ZoomedInView>
                        <ListView x:Name="SongsListView" ItemContainerStyle="{StaticResource SongsItemContainerStyle}" SelectionMode="Single" DoubleTapped="{x:Bind ViewModel.SongsOnDoubleTapped, Mode=OneWay}" Tapped="{x:Bind ViewModel.SongsOnTapped, Mode=OneWay}" ItemTemplate="{StaticResource SongsTemplate}">
                            <ListView.GroupStyle>
                                <GroupStyle HeaderTemplate="{StaticResource StringGroupHeaderTemplate}" HidesIfEmpty="True" />
                            </ListView.GroupStyle>
                        </ListView>
                    </SemanticZoom.ZoomedInView>
                    <SemanticZoom.ZoomedOutView>
                        <ListView Style="{StaticResource JumpPanelStyle}" ItemTemplate="{StaticResource JumpItemStyle}" />
                    </SemanticZoom.ZoomedOutView>
                </SemanticZoom>
            </Grid>
        </PivotItem>
        <PivotItem x:Uid="TopContentPage_ArtistPivotItem" Header="Artists">
            <SemanticZoom x:Name="ArtistsSemanticZoom">
                <SemanticZoom.ZoomedInView>
                    <ListView x:Name="ArtistsListView" ItemContainerStyle="{StaticResource SongsItemContainerStyle}" IsItemClickEnabled="True" ItemClick="{x:Bind ViewModel.ArtistsOnItemClick}">
                        <ListView.GroupStyle>
                            <GroupStyle HeaderTemplate="{StaticResource StringGroupHeaderTemplate}" HidesIfEmpty="True" />
                        </ListView.GroupStyle>

                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:Artist">
                                <widgets:SongsCollectionItem Title="{x:Bind Name}" ContentPadding="15, 6" AlbumsCount="{x:Bind Albums.Count}" SongsCount="{x:Bind SongsCount}" CoverUri="{x:Bind CoverUri}" />
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </SemanticZoom.ZoomedInView>
                <SemanticZoom.ZoomedOutView>
                    <ListView Style="{StaticResource JumpPanelStyle}" ItemTemplate="{StaticResource JumpItemStyle}" />
                </SemanticZoom.ZoomedOutView>
            </SemanticZoom>
        </PivotItem>
        <PivotItem x:Uid="TopContentPage_AlbumsPivotItem" Header="Albums">
            <SemanticZoom x:Name="AlbumsSemanticZoom">
                <SemanticZoom.ZoomedInView>
                    <toolkit:AdaptiveGridView x:Name="AlbumsGridView" OneRowModeEnabled="False" ItemHeight="90" DesiredWidth="200" IsItemClickEnabled="True" ItemClick="{x:Bind ViewModel.AlbumsOnItemClick}" ItemContainerStyle="{StaticResource AlbumItemStyle}" Style="{StaticResource AlbumGridViewStyle}">
                        <toolkit:AdaptiveGridView.GroupStyle>
                            <GroupStyle HeaderTemplate="{StaticResource NumericGroupHeaderTemplate}" HidesIfEmpty="True" />
                        </toolkit:AdaptiveGridView.GroupStyle>

                        <toolkit:AdaptiveGridView.ItemTemplate>
                            <DataTemplate x:DataType="models:Album">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <controls:FadeImage Background="{StaticResource AccentBrush}" Grid.RowSpan="2" UriSource="{x:Bind CoverUri}" DecodePixelHeight="400" DecodePixelWidth="400"/>
                                    <Rectangle Grid.Row="1" Fill="#81000000"/>
                                    <TextBlock Grid.Row="1" FontSize="12" Foreground="White" Text="{x:Bind Title}" Margin="8, 1, 4, 1" TextTrimming="CharacterEllipsis" />
                                </Grid>
                            </DataTemplate>
                        </toolkit:AdaptiveGridView.ItemTemplate>
                    </toolkit:AdaptiveGridView>
                </SemanticZoom.ZoomedInView>
                <SemanticZoom.ZoomedOutView>
                    <ListView Style="{StaticResource JumpPanelStyle}" ItemTemplate="{StaticResource JumpItemStyle}"/>
                </SemanticZoom.ZoomedOutView>
            </SemanticZoom>
        </PivotItem>
        <PivotItem x:Uid="TopContentPage_GenresPivotItem" Header="Genres">
            <SemanticZoom x:Name="GenresSemanticZoom">
                <SemanticZoom.ZoomedInView>
                    <ListView x:Name="GenresListView" ItemContainerStyle="{StaticResource SongsItemContainerStyle}" ItemClick="{x:Bind ViewModel.GenresOnItemClick}" IsItemClickEnabled="True">
                        <ListView.GroupStyle>
                            <GroupStyle HeaderTemplate="{StaticResource StringGroupHeaderTemplate}" HidesIfEmpty="True" />
                        </ListView.GroupStyle>

                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:Genre">
                                <widgets:SongsCollectionItem Title="{x:Bind Title}" ContentPadding="15, 6" AlbumsCount="0" SongsCount="{x:Bind SongsCount}" CoverUri="{x:Bind CoverUri}" />
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </SemanticZoom.ZoomedInView>
                <SemanticZoom.ZoomedOutView>
                    <ListView Style="{StaticResource JumpPanelStyle}" ItemTemplate="{StaticResource JumpItemStyle}" />
                </SemanticZoom.ZoomedOutView>
            </SemanticZoom>
        </PivotItem>
    </Pivot>

</Page>
