            <StackPanel.Resources>
                <Style TargetType="controls:IconButton">
                    <Setter Property="Foreground" Value="{StaticResource SubtleBrush}" />
                    <Setter Property="Margin" Value="0, 0, 20, 0" />
                </Style>
